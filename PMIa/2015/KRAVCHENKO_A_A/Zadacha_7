print('Угадайте один из городов Золотого кольца России, который загадал компьютер')
import random
a = random.choice(["Sergiev-Posad","Pereslavl-Zalesskii","Rostov","Yaroslavl","Kostroma", "Ivanovo", "Suzdal", "Vladimir"])
b = input('Ваш ответ: ')
 
b =''
balls = 100
while a !=b : 
 	print ('Вы не угадали')
 	balls = balls - 10
 	b = input('Ваш ответ: ')
    
print ('Вы угадали: ' + a + ' - ' + b)
print ('Вы закончили игру с очками: ', balls)
input('\nНажмите Enter для выхода') 


